<!-- Neopop background - choosing a different bright base -->
<div class="min-h-screen bg-lime-100 py-10 px-4 sm:px-6 lg:px-8 font-sans">
	<!-- Centered content area -->
	<!-- Increased max-width slightly for the extra fields -->
	<div class="max-w-xl mx-auto">
		<!-- Form container with thick outline and hard shadow -->
		<div
			class="bg-white rounded-xl border-4 border-black shadow-[8px_8px_0px_rgba(0,0,0,1)] /* Hard shadow effect */ overflow-hidden"
		>
			<!-- Form Content Area with Padding -->
			<div class="p-8">
				<h1
					class="text-center text-3xl font-extrabold text-black mb-8 uppercase"
				>
					Create CampIn!
				</h1>

				<!-- Added required attributes and placeholders -->
				<form action="/campers" method="POST" class="space-y-6">
					<!-- Title Field -->
					<div>
						<label
							for="title"
							class="block text-sm font-bold text-black mb-1 uppercase tracking-wide"
							>Title</label
						>
						<input
							type="text"
							id="title"
							name="camper[title]"
							required
							placeholder="Awesome Camp Name"
							class="block w-full px-4 py-2.5 border-2 border-black rounded-lg bg-white placeholder-gray-500 text-black font-medium focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-pink-500 focus:border-black transition duration-100 ease-in-out"
						/>
					</div>

					<!-- Location Field -->
					<div>
						<label
							for="location"
							class="block text-sm font-bold text-black mb-1 uppercase tracking-wide"
							>Location</label
						>
						<input
							type="text"
							id="location"
							name="camper[location]"
							required
							placeholder="City, State or Landmark"
							class="block w-full px-4 py-2.5 border-2 border-black rounded-lg bg-white placeholder-gray-500 text-black font-medium focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-cyan-500 focus:border-black transition duration-100 ease-in-out"
						/>
					</div>

					<!-- Price Field (Input Group) -->
					<div>
						<label
							for="price"
							class="block text-sm font-bold text-black mb-1 uppercase tracking-wide"
							>Price</label
						>
						<!-- Wrapper div gets the border and focus-within styling -->
						<div
							class="flex items-stretch border-2 border-black rounded-lg overflow-hidden focus-within:ring-2 focus-within:ring-offset-1 focus-within:ring-orange-500 transition duration-100 ease-in-out"
						>
							<span
								class="flex items-center px-3 py-2.5 bg-gray-200 text-black font-bold border-r-2 border-black"
							>
								â‚¹
							</span>
							<input
								type="number"
								step="0.01"
								min="0"
								id="price"
								name="camper[price]"
								required
								placeholder="0.00"
								class="flex-grow px-4 py-2.5 bg-white text-black font-medium placeholder-gray-500 border-0 focus:outline-none focus:ring-0"
							/>
						</div>
					</div>

					<!-- Image URL Field -->
					<div>
						<label
							for="image"
							class="block text-sm font-bold text-black mb-1 uppercase tracking-wide"
							>Image URL</label
						>
						<input
							type="url"
							id="image"
							name="camper[image]"
							required
							placeholder="http://example.com/image.jpg"
							class="block w-full px-4 py-2.5 border-2 border-black rounded-lg bg-white placeholder-gray-500 text-black font-medium focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-purple-500 focus:border-black transition duration-100 ease-in-out"
						/>
					</div>

					<!-- Description Field -->
					<div>
						<label
							for="description"
							class="block text-sm font-bold text-black mb-1 uppercase tracking-wide"
							>Description</label
						>
						<textarea
							id="description"
							name="camper[description]"
							rows="4"
							required
							placeholder="Tell us about this camp..."
							class="block w-full px-4 py-2.5 border-2 border-black rounded-lg bg-white placeholder-gray-500 text-black font-medium focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-yellow-500 focus:border-black transition duration-100 ease-in-out"
						></textarea>
					</div>

					<!-- Button Row -->
					<div class="flex items-center justify-between pt-8">
						<!-- Back Button (Neopop Secondary) -->
						<a
							href="/campers"
							class="inline-block px-6 py-2 border-2 border-black rounded-lg text-sm font-bold text-black uppercase tracking-wider bg-gray-200 hover:bg-gray-300 active:translate-x-[2px] active:translate-y-[2px] /* Simple press effect */ transition-all duration-100 ease-in-out"
						>
							Back
						</a>

						<!-- Add Camp Button (Neopop Primary) -->
						<button
							type="submit"
							class="inline-block px-6 py-2 border-2 border-black rounded-lg shadow-[4px_4px_0px_rgba(0,0,0,1)] text-sm font-bold text-black uppercase tracking-wider bg-cyan-400 hover:bg-cyan-500 /* Bright color */ active:shadow-none active:translate-x-[2px] active:translate-y-[2px] /* Press effect */ transition-all duration-100 ease-in-out"
						>
							Add Camp
						</button>
					</div>
				</form>
			</div>
			<!-- End Form Content Area -->
		</div>
		<!-- End Form Card -->
	</div>
	<!-- End Centered Content Area -->
</div>
<!-- End Outer Container -->
