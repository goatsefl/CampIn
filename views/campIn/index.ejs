<% layout('layouts/boilerplate')%>
<!-- 
    NOTE: For this layout to look best, you might want to add a 
    subtle background to the <body> in your layouts/boilerplate.ejs, 
    like <body class="bg-gray-100">, so the centered lime 
    block sits on something other than stark white. 
-->

<!-- This div is now the main centered block with the background, border, and shadow -->
<div
	class="max-w-4xl mx-auto my-10 px-6 py-8 sm:px-8 sm:py-10 bg-lime-100 rounded-xl border-4 border-black shadow-[8px_8px_0px_rgba(0,0,0,1)] /* Hard shadow for the whole block */ font-sans"
>
	<h1
		class="text-center text-4xl font-extrabold text-black mb-8 uppercase tracking-tight"
	>
		All Camps!
	</h1>

	<!-- Link to Add New Camp - Styled as Primary Button -->
	<div class="mb-8 text-right">
		<a
			href="/campers/new"
			class="inline-block px-6 py-2 border-2 border-black rounded-lg shadow-[4px_4px_0px_rgba(0,0,0,1)] text-sm font-bold text-black uppercase tracking-wider bg-cyan-400 hover:bg-cyan-500 active:shadow-none active:translate-x-[2px] active:translate-y-[2px] transition-all duration-100 ease-in-out"
		>
			Add New Camp
		</a>
	</div>

	<!-- Container for the list of camp cards -->
	<div class="space-y-8">
		<% for(let camp of camps) { %>
		<!-- Neopop Card for each camp - *** NO LONGER NEEDS THE HARD PAGE SHADOW *** -->
		<div
			class="bg-white rounded-lg border-4 border-black /* Keep border, remove shadow */ overflow-hidden md:flex"
		>
			<!-- Image Column -->
			<div
				class="md:w-1/3 flex-shrink-0 border-b-4 border-black md:border-b-0 md:border-r-4"
			>
				<a href="/campers/<%= camp.id %>">
					<img
						class="w-full h-48 md:h-full object-cover block"
						src="<%= camp.image %>"
						alt="<%= camp.title %> picture"
					/>
				</a>
			</div>

			<!-- Text Content Column -->
			<div class="md:w-2/3 p-6 flex flex-col justify-between space-y-3">
				<div>
					<a href="/campers/<%= camp.id %>" class="hover:underline">
						<h5 class="text-xl font-bold text-black mb-1"><%= camp.title %></h5>
					</a>
					<p class="text-sm text-black opacity-80 mb-2">
						<%= camp.description.substring(0, 100) %><% if
						(camp.description.length > 100) { %>...<% } %>
					</p>
					<p
						class="text-xs text-black font-semibold uppercase tracking-wider opacity-60"
					>
						<%= camp.location %>
					</p>
				</div>
				<div class="mt-4 self-start">
					<a
						href="/campers/<%= camp.id %>"
						class="inline-block px-4 py-1.5 border-2 border-black rounded-lg shadow-[4px_4px_0px_rgba(0,0,0,1)] text-xs font-bold text-black uppercase tracking-wider bg-cyan-400 hover:bg-cyan-500 active:shadow-none active:translate-x-[2px] active:translate-y-[2px] transition-all duration-100 ease-in-out"
					>
						View <%= camp.title %>
					</a>
				</div>
			</div>
			<!-- End Text Content Column -->
		</div>
		<!-- End Neopop Card -->
		<% } %>
	</div>
	<!-- End Camp List Container -->
</div>
<!-- End Main Centered Container -->
